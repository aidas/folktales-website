---
import { localizePath } from 'astro-i18next';
import LanguageSwitcher from '@/components/LanguageSwitcher';

const { currentLanguage } = Astro.props;
---

<nav class="navbar bg-primary text-primary-content">
  <div class="container mx-auto flex items-center justify-between">
    <a href={localizePath('/')} class="btn btn-primary text-xl font-bold">
      Otibeguni
    </a>
    <div class="flex grow justify-end px-2">
      <div class="flex items-stretch">
        <a
          href={localizePath('/stories')}
          class="btn btn-primary rounded-field"
        >
          Stories
        </a>
        <LanguageSwitcher currentLanguage={currentLanguage} client:load />
      </div>
    </div>
  </div>
</nav>
