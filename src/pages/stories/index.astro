---
import StoryList from '@/components/StoryList';
import Layout from '@/layouts/Layout.astro';
import type { IStory } from '@/types';

const storiesEn: Array<{ frontmatter: IStory }> = Object.values(
  import.meta.glob('../../stories/en/*.md', { eager: true }),
);
const storiesBn: Array<{ frontmatter: IStory }> = Object.values(
  import.meta.glob('../../stories/bn/*.md', { eager: true }),
);
const stories = [...storiesEn, ...storiesBn];
---

<Layout>
  <StoryList stories={stories} client:load />
</Layout>
